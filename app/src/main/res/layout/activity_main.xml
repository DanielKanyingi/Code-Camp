<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"    tools:context="com.example.dante.codecamp.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:scaleType="fitXY"
        android:src="@drawable/coding"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:src="@drawable/ic_group_work_black_24dp"/>

        <TextView
            android:id="@+id/title"
            android:padding="17dp"
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"

            android:textColor="#00FF00"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:text="Code Camp 2018"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:padding="14dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group_work_black_24dp"/>
    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:padding="1dp"
        android:paddingLeft="28dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#00FF00"
        android:textAlignment="center"
        android:text="An Initiative by Upcoming Coders"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:padding="14dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_access_time_black_24dp"/>
    <TextView
        android:id="@+id/time"
        android:padding="17dp"
        android:paddingLeft="28dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"


        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#00FF00"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:text="8am-5pm, Mon-Fri"
        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:padding="14dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email_black_24dp"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:padding="17dp"
        android:paddingLeft="28dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#00FF00"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:text="codecamp@gmail.com"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:padding="14dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_black_24dp"/>
    <TextView
        android:id="@+id/telephone"
        android:padding="17dp"
        android:paddingLeft="28dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="viewStart"
        android:layout_gravity="start"

        android:textColor="#00FF00"
        android:textSize="22sp"
        android:text="+25471335*******"
        />
    </LinearLayout>
    <Button
        android:id="@+id/next"
        android:textColor="#00FF00"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:textSize="22sp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"/>

</LinearLayout>
